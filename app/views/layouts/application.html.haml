!!! html5
%html
  %head
    = render 'layouts/stylesheets'

    %title Hello!
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    = render 'layouts/header'

    #primary-marketing
      .container
        %h2 test

    #secondary-marketing
      .container
        %h3 test

    #content
      .container
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")
        = yield

    = render 'layouts/footer'

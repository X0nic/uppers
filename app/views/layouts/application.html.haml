!!! html5
%html
  %head
    = csrf_meta_tag
    = render 'layouts/stylesheets'
    = javascript_include_tag :defaults

    %title
      = title

  %body
    = render 'layouts/header'

    #content
      .container
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")
        = yield

    = render 'layouts/footer'
